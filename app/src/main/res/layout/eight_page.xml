<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pages_fon">

    <LinearLayout
        android:id="@+id/container29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line29"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture29"
                android:layout_width="410dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art29_for_page8"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture30"
                android:layout_width="410dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art30_for_page8"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line31"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture31"
                android:layout_width="410dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art31_for_page8"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line32"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture32"
                android:layout_width="410dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art32_for_page8"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_for_btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_for_btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_before7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_before"
                android:textSize="60sp">
            </Button>

            <Button
                android:id="@+id/btn_next8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next"
                android:layout_marginLeft="220dp"
                android:textSize="60sp">
            </Button>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>