<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pages_fon"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture9"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art9_for_page3"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture10"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art10_for_page3"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture11"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art11_for_page3"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture12"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art12_for_page3"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_for_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_for_btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_before2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_before"
                android:textSize="60sp">
            </Button>

            <Button
                android:id="@+id/btn_next3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next"
                android:layout_marginLeft="220dp"
                android:textSize="60sp">
            </Button>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>