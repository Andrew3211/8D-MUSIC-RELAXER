<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pages_fon">

    <LinearLayout
        android:id="@+id/container21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line21"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture21"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art21_for_page6"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line22"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture22"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art22_for_page6"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture23"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art23_for_page6"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/line24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/picture24"
                android:layout_width="350dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/art24_for_page6"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/container_for_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_for_btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_before5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_before"
                android:textSize="60sp">
            </Button>

            <Button
                android:id="@+id/btn_next6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_next"
                android:layout_marginLeft="220dp"
                android:textSize="60sp">
            </Button>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>